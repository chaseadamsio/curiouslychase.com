---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="max-w-5xl mx-auto">
	<div class="flex flex-row align-center gap-4 pb-4">
		<img
			class="w-[36px] h-[36px] rounded-full inline-block mr-2]"
			src="/img/curious_chase.png"
			alt="Curious Chase"
			width="100"
			height="100"
		/>
		<h2 class="lowercase">
			{SITE_TITLE}
		</h2>
	</div>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="/posts">Blog</HeaderLink>
		<HeaderLink href="/about">About</HeaderLink>
		<HeaderLink href="https://twitter.com/curiouslychase" target="_blank">
			Twitter
		</HeaderLink>
		<HeaderLink href="https://github.com/curiouslychase" target="_blank">
			GitHub
		</HeaderLink>
		<HeaderLink href="https://crca.news" target="_blank">Newsletter</HeaderLink>
	</nav>
</header>
<style>
	header {
		margin: 0em 0 2em;
	}
	h2 {
		margin: 0.5em 0;
	}
</style>
