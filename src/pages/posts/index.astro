---
import { SITE_TITLE } from "../../consts";

import PostSummaryList from "../../components/PostSummaryList.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getPosts } from "../../utils/getPosts";
import PageHeading from "../../components/PageHeading.astro";

const posts = await getPosts();
---

<BaseLayout title={SITE_TITLE} description={"Articles written by Chase Adams"}>
	<div class="pb-4">
		<PageHeading>The Blog</PageHeading>
		<span class="pt-4 text-3xl font-subtitle">Articles I've Written</span>
	</div>
	<section>
		<PostSummaryList posts={posts} />
	</section>
</BaseLayout>

